{
  "name": "brunty/cigar",
  "description": "Smoke testing tool written in PHP.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Matt Brunt",
      "email": "matt@mfyu.co.uk"
    }
  ],
  "autoload": {
    "psr-4": {
      "Brunty\\Cigar\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {}
  },
  "require": {
    "php": "8.1.*|8.2.*",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "mikey179/vfsstream": "^1.6",
    "php-coveralls/php-coveralls": "^2.6",
    "kahlan/kahlan": "^5.2",
    "symfony/process": "^6.3",
    "vimeo/psalm": "^5.15",
    "squizlabs/php_codesniffer": "^3.7",
    "slevomat/coding-standard": "^8.13"
  },
  "bin": [
    "bin/cigar"
  ],
  "scripts": {
    "test": "vendor/bin/kahlan --reporter=verbose"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
