#!/usr/bin/env php
<?php

use Brunty\Cigar\AsyncChecker;
use Brunty\Cigar\Checker;
use Brunty\Cigar\Outputter;
use Brunty\Cigar\Parser;

error_reporting(0);

require __DIR__ . '/../vendor/autoload.php';

array_shift($argv);
$help = isset($argv[0]) && $argv[0] === '--help';

if($help) {
    $content = <<<HELP

\e[33mUsage:\e[0m
  cigar [options]

\e[33mOptions:\e[0m
      \e[32m--quiet\e[0m                    Do not output any message


HELP;
    echo $content;
    exit(0);
}

if( ! file_exists('.cigar')) {
    Outputter::writeErrorLine('Could not find .cigar file');
    exit(1);
}

$quiet = isset($argv[0]) && $argv[0] === '--quiet';
try {
    $domains = (new Parser)->parse('.cigar');
} catch(\Throwable $e) {
    Outputter::writeErrorLine('Unable to parse .cigar file');
    exit(1);
}

$results = (new AsyncChecker())->check($domains);
$passed = (new Outputter)->outputResults($results, $quiet);

if ( ! $passed) {
    exit(1);
}

exit(0);
